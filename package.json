{
  "name": "derp",
  "version": "0.1.0",
  "description": "Natural language grep for regex-challenged developers (because regex is hard, okay?)",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "derp": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node --loader ts-node/esm src/cli.ts --help",
    "prepublishOnly": "npm run build",
    "test": "echo 'Tests will run with: npx jest@29' && NODE_OPTIONS='--experimental-vm-modules' npx --yes jest@29 --passWithNoTests",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' npx --yes jest@29 --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' npx --yes jest@29 --coverage --passWithNoTests",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "grep",
    "ripgrep",
    "ai",
    "llm",
    "search",
    "regex",
    "natural-language",
    "cli"
  ],
  "author": "Derp Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/derp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/derp/issues"
  },
  "homepage": "https://github.com/yourusername/derp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/node": "^24.9.1",
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.7",
    "ora": "^5.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  }
}
